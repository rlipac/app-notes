<div class="row">

    {{#each notes}}
    <div class="col-md-3 my-2">
        <div class="card text-center">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{title}} <a href="/note/edit/{{id}}"><i class="fas fa-edit"></i></a>
                </h4>
                <hr>
            </div>
            <p class="p-1">{{description}}</p>
            <form action="/note/delete/{{_id}}?_method=DELETE" method="POST">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit" class="mx-auto my-2"><i class="fas fa-trash"></i></button>
            </form>

        </div>
    </div>
    {{else}}
    <div class="card mx-auto">
        <div class="card-body">
            <h2>hello {{user.name}}</h2>
            <p class="display-5">No tienes notas</p>
            <a href="/note/add" class="btn btn-success  mx-auto my-2">Crea Una ahora</a>
        </div>
    </div>
    {{/each}}
</div>