    <style>
        .card-container{
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
          
        }
        .card{
         
            margin: .5em 0;
        }
        .cadidato-card{
        
            width: 15rem;
            height: 15rem;
            object-fit: cover; 
        }

    </style>
    <main class="container-fluid p-3">
        <div class="row">
            <div class="col-md-12 my-2  ">
               
                <div class="card-container" id="tabla">                  
                    <% if (candidatos) { %>
                        <% for (var i = 0; i < candidatos.length; i++) { %>   
                            <div class="card" style="width: 15rem;">
                                <img src='<%= candidatos[i].urlFoto%>'  class="cadidato-card" alt="foto_candidato">
                                <div class="card-body">
                                  <h5 class="card-title"> <%= candidatos[i].name %></h5>
                                  <p class="card-text" style="display: none;"><%= candidatos[i].info %></p>
                                  <p class="card-text" ><%= candidatos[i].votos.length %></p>
                                  <a href="/users/signup/<%= candidatos[i]._id %>"><i class="fas fa-person-booth" style="font-size: 2em;"></i></a>
                                </div>
                                
                            </div> 
                          
                        
                            <% } %>
                            <% } %>           
                </div>
                    
                   
            </div>
        </div>
        </div>
    </main>